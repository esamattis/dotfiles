#!/bin/sh

set -eu

if [ "${1:-}" = "" ]; then
    path="."
    cd "$(git rev-parse --show-toplevel)"
else
    path="$1"
fi


# Add untracked files
git ls-files --others --exclude-standard "$path" | xargs git add --intent-to-add
git add -p "$path"

if [ "$(git diff --cached)" = "" ]; then
    echo "Nothing to commit"
    exit 1
fi

git commit -m wip