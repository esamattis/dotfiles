[apply]
	whitespace = nowarn
[color]
	branch = auto
	diff = auto
	status = auto
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = 11
	frag = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	st = status -sb
	a = add-untracked
	l = log --pretty=format:'%C(yellow)%h%Creset %s %C(cyan)- %an%C(white), %ar%Creset'
	today = log --since="6am" --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	l-day = !git log --after="$1 00:00" --until="$1 23:59" --author="$(git config user.name)"
	ll = log --stat --abbrev-commit
	stag = for-each-ref --sort='*authordate' --format='%(refname:short)' refs/tags
	rh = reset HEAD
	addu = add-untracked
	cicleanup = commit -m 'cleanup\n\nNon functional code cleaning'
	cistyle = commit -m 'style++\n\nJust a simple style change for the great good'
	stash-pop-force = !git read-tree stash && git checkout-index -f && git reset HEAD && git stash drop
	not-pushed = !git l ${1:-origin/master}..HEAD
	cached = diff --cached
	reset-upstream = !git reset --hard $(git rev-parse --abbrev-ref --symbolic-full-name @{u})
	difft = difftool
[push]
	default = simple
[gc]
	auto = 0
[core]
	pager = delta
	excludesFile = ~/.gitignore
	hooksPath = ~/code/dotfiles/git/hooks
[diff]
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true
[url "https://"]
	insteadOf = git://
[grep]
	lineNumber = true
[pull]
	ff = only
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[merge]
	conflictstyle = zdiff3
[gpg]
	format = ssh
[include]
	path = ~/.gitconfig.local
